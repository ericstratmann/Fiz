<?xml version="1.0" encoding="UTF-8"?>

<!--
This ant script contains targets to fetch a new version of Fiz
-->
<project name="Downloads a new version of Fiz" basedir="."
         default="fetch">

    <target name="fetch"
            description="Fetches a specific version of Fiz">

        <mkdir dir="${destdir}"/>

        <!-- Fetch the required version of Fiz from the server -->
        <get src="${fizrepository}/${version}/fiz.zip"
             dest="${destdir}/fiz-${version}.zip"/>
        <unzip src="${destdir}/fiz-${version}.zip"
               dest="${destdir}"/>

        <!-- Clean up -->
        <delete file="${destdir}/fiz-${version}.zip"/>

    </target>

</project>
