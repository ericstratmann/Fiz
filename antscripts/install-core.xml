<?xml version="1.0" encoding="UTF-8"?>

<!--
This ant script contains targets to fetch a new version of Fiz
-->
<project name="install-core" basedir="."
         default="install">

    <target name="install"
            description="Fetches and installs a specific version of Fiz">

        <mkdir dir="${destdir}"/>

        <!-- Fetch the required version of Fiz from the server -->
        <get src="${fizserver}/static/FizCore/${version}/fiz-${version}.zip"
             dest="${destdir}/fiz-${version}.zip"/>
        <unzip src="${destdir}/fiz-${version}.zip"
               dest="${destdir}"/>

        <!-- Clean up -->
        <delete file="${destdir}/fiz-${version}.zip"/>

        <!-- Invoke the "install" target for the new version -->
        <ant antfile="${destdir}/fiz-${version}/build.xml" target="install"
             inheritall="false"/>

    </target>

</project>
